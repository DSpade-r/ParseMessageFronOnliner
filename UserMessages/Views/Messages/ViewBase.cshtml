@model IEnumerable<UserMessages.Models.Message>

@{
    ViewBag.Title = "Index";
}

<h2>Просмотр данных</h2>

<table class="table table-striped ">
    <tr>
        <th>
            <span class="glyphicon glyphicon-user"></span>
            @Html.DisplayName("Автор")
        </th>
        <th>
            <span class="glyphicon glyphicon-calendar"></span>
            @Html.DisplayName("Дата")
        </th>
        <th>
            <span class="glyphicon glyphicon-envelope"></span>
            @Html.DisplayName("Сообщение")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(it => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(it => item.DateTime)
        </td>
        <td>
            @Html.Raw(item.Text)
        </td>        
    </tr>
}
</table>